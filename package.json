{
    "name": "freshcart-grocery",
    "version": "1.0.0",
    "description": "Full-stack MERN grocery web application",
    "main": "server/server.js",
    "scripts": {
        "start": "node server/server.js",
        "server": "nodemon server/server.js",
        "client": "npm start --prefix client",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "install-all": "npm install && cd client && npm install && cd ..",
        "seed": "node server/seeder.js",
        "seed:clear": "node server/seeder.js --clear",
        "build": "cd client && npm run build"
    },
    "keywords": [
        "grocery",
        "mern",
        "ecommerce"
    ],
    "author": "FreshCart",
    "license": "MIT",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-validator": "^7.0.1",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.0.3",
        "multer": "^1.4.5-lts.1"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "nodemon": "^3.0.2"
    }
}